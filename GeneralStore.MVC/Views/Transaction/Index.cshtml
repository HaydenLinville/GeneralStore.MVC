@model IEnumerable<GeneralStore.MVC.Models.Transaction>


@{
    ViewBag.Title = "Index";
}

<h2>Transactions</h2>

<p>
    @Html.ActionLink("Add Transaction", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(t => t.Customer.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(t => t.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(t => t.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(t => t.DateOfTransaction)
        </th>
        <th>
            @Html.DisplayNameFor(t => t.Total)
        </th>
    </tr>
    @foreach (var tr in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(t => tr.Customer.FullName)
            </td>
            <td>
                @Html.DisplayFor(t=> tr.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(t=>tr.Quantity)
            </td>
            <td>
                @Html.DisplayFor(t=>tr.DateOfTransaction)
            </td>
            <td>
                @Html.DisplayFor(t=>tr.Total)
            </td>
            <td>
                @Html.ActionLink("Change", "Edit", new {id=tr.TransactionId})|
                @Html.ActionLink("More Info", "Details", new {id=tr.TransactionId})|
                @Html.ActionLink("Remove", "Delete", new {id=tr.TransactionId})
            </td>
        </tr>
    }

</table>

