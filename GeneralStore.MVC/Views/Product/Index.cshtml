@model IEnumerable<GeneralStore.MVC.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>List of Products</h2>
<p>
    @Html.ActionLink("Add Products", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFood)
        </th>
    </tr>
    @foreach (var items in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => items.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> items.InventoryCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> items.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> items.IsFood)
            </td>
            <td>
                @Html.ActionLink("Change", "Edit", new { id = items.ProductId})|
                @Html.ActionLink("More Info", "Details", new { id = items.ProductId})|
                @Html.ActionLink("Remove", "Delete", new { id = items.ProductId})
            </td>
        </tr>
    }
</table>

